{% extends "MaillingListBundle:MailingList:layout.html.twig" %}

{% block body %}		
<div class="row">
	<div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	    <div class="modal-dialog" role="document">
	    	<div class="modal-content">
	      		<div class="modal-header">
	        		<button type="button" class="close" data-dismiss="modal" aria-label="{{ 'modal.close'|trans }}"><span aria-hidden="true">&times;</span></button>
	        		<h4 class="modal-title" id="myModalLabel">{{ 'form.supprimer.titre'|trans }}</h4>
	      		</div>
			    <div class="modal-body">
			       {{'form.confirm_delete.short'|trans }} <span id="confirmDeleteMail"></span> ?
			    </div>
	      		<div class="modal-footer">
	        		<button type="button" class="btn btn-default" data-dismiss="modal">{{ 'form.annuler'|trans }}</button>
	        		<button type="button" class="btn btn-primary">{{ 'form.supprimer.titre'|trans }}</button>
	      		</div>
	    	</div>
	    </div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="panel-title">
      			<div class="btn-group pull-right"> 
      				<a href="{ pathAdd }}" class="btn btn-default "><i class="glyphicon glyphicon-plus"></i> {{ 'form.add.titre'|trans }}</a>
    				<a href="{ path(pathExport, { 'format': "xlsx" }) }}" class="btn btn-default "><i class="glyphicon glyphicon-download"></i> Excel</a>
    				<a href="{ path(pathExport, { 'format': "csv" }) }}" class="btn btn-default "><i class="glyphicon glyphicon-download"></i> CSV</a>
    			</div>
				<h4>{{ 'mailingList.panel.title'|transchoice(abonnes|length) }}</h4>
    			
			</div> 
		</div>
		<div class="panel-body">
	    	<table class="jpi_table_data_table table table-striped table-responsive table-condensed table-hover">
	    		<thead>
		    		<tr>
		    			<th>{{'mailingList.mail.title'|transchoice(abonnes|length) }}</th>
		    			<th style="width:70px"></th>
		    		</tr>
	    		</thead>
	    		<tbody>
	    			{% for abonne in abonnes %}
	    			<tr>
		    			<td>{{ abonne }}</td>
		    			<td>
		    				<div class="btn-group btn-group-xs" role="group">
		    					<a class="btn btn-default" href=""><span class="glyphicon glyphicon glyphicon-edit"></span></a>
		    					<a class="btn btn-default" data-toggle="modal" data-target="#confirmDelete" data-mail="{{ abonne }}">
		    						<span class="glyphicon glyphicon-remove"></span>
		    					</a>
							</div>
		    			</td>
		    		</tr>
		    		{% else %}
	    			<tr>
		    			<td colspan="2">
		    				{{ 'mailingList.empty'|trans }}
		    			</td>
		    		</tr>
		    		{% endfor %}

	    		</tbody>
	    	</table>
    	</div>
	</div>
</div>
{% endblock %}

{% extends "MaillingListBundle:MailingList:layout.html.twig" %}

{% block body %}		
<div class="row">
	<div class="panel panel-default">
    	<div class="panel-heading clearfix">
        	<div class="panel-title">
    			<ul class="list-inline">
            		<li class="col-xs-12">
               			<h4 class="pull-left">{{ 'form.modifier'|trans }}</h4>
    				</li>
    			</ul>
    		</div>
      	</div>
    	<div class="panel-body">
            {{ form_start(edit_form) }}
            {{ form_rest(edit_form) }}
            
            <div class="form-group">
            	<div class="col-sm-2">
            		<a href="{{ path("home") }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'form.annuler'|trans }}</a>
            	</div>
            	<div class="col-sm-10">
            		<button type="submit" class="btn btn-default pull-right"><span class="glyphicon glyphicon-ok"></span> {{ 'form.enregistrer'|trans }}</button>
            	</div>
            </div>
            {{ form_end(edit_form) }}
    	</div>
    </div>
</div>
{% endblock %}

{% extends "MaillingListBundle:Admin:layout.html.twig" %}

{% block body %}
<div class="row">
    <div class="panel panel-default">
    	<div class="panel-heading clearfix">
    		<div class="panel-title">
    			<ul class="list-inline">
            		<li class="col-xs-12">
               			<h4 class="pull-left">{{ 'form.membre'|transchoice(liste_users|length) }}</h4>
              			<span class="btn-group pull-right"> 
    			    		<a href="{{ path("jpi_user_add") }}" class="btn btn-default "><i class="glyphicon glyphicon-plus"></i> {{ 'form.add.titre'|trans }}</a>
    					</span>
    				</li>
    			</ul>
    		</div>
    	</div>
    	<div class="panel-body">
    		<table class="table table-striped table-hover">
    			<thead>
    				<tr>
    					<th>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</th>
    					<th>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</th>
    					<th style="width:70px"></th>
    				</tr>
    			</thead>
    			{% for user in liste_users %}
    			<tr>
    				<td>{{ user.username }}</td>
    				<td>{{ user.email }}</td>
        			<td>
        				<a href="{{ path('jpi_show_user_profile', { 'id': user.id }) }}">
        				<div class="btn-group btn-group-xs btn-edit" role="group">
        					<span class="btn btn-default glyphicon glyphicon glyphicon-chevron-right"></span>
    					</div>
    					</a>
        			</td>
    			</tr>
    			{% endfor %}
    		</table>
    	</div>
    </div>
</div>
{% endblock %}

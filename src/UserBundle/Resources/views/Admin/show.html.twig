{% extends "UserBundle:Admin:layout_show.html.twig" %}

{% block form_delete %}
	<div class="modal fade" id="confirm-action">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">x</button>
	        <h4 class="modal-title">{{ 'form.supprimer.titre'|trans }}</h4>
	      </div>
	      <div class="modal-body">
	      	{{ 'form.confirm_delete'|trans({'%entityLabel%': user.username}) }}
	      </div>
	      <div class="modal-footer">
	      	{% include "UserBundle:Admin:layout_form_delete.html.twig" %}
	      </div>
	    </div>
	  </div>
	</div>
{% endblock %}
